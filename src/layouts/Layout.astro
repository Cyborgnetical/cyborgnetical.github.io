---

import { ClientRouter } from 'astro:transitions';
import Header from "./components/Header.astro"
import Footer from "./components/Footer.astro"




interface Props {
    name:string;
    overrideTitle?:boolean;
}

const {name, overrideTitle = false} = Astro.props

let title = `Cyborgnetical | ${name}`

if(overrideTitle){
    title = name
}



---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="82nDufUtL-pcbfSgvpM4EHQ1w9EpEVvbsf__juWUyzk" />
    <ClientRouter></ClientRouter>
    <title>{title}</title>
</head>
<body>

    <Header></Header>
    <main>
        <slot></slot>
    </main>
    <Footer license='Apache'></Footer>
</body>
</html>